<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Coordenador_de_Pos_Venda</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>CoordenadorEngenharia</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Supervisor_de_Viabilidade</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account</field>
        <field>Owner</field>
        <field>Amount</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>tinoco@enerzee.com.br</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Etapa de envio do pedido de aprovação para o aprovador avaliar.</description>
        <label>Etapa 1</label>
        <name>Etapa_1</name>
    </approvalStep>
    <description>Processo de aprovação para tipo de registro de contrato mini.</description>
    <emailTemplate>unfiled$public/EnviarParaAprovacao</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Contrato Mini,Outras Oportunidades,Mini Grupo A - Elaboração,Mini Grupo B - Elaboração</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Elaboração de proposta</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.EnquadramentoGD__c</field>
            <operation>equals</operation>
            <value>Minigeração,Off-Grid</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Fase_Status_Elaboracao</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Proposta_aprovada</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PropostaAprovada</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PropostaReprovada</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>AlteraFaseOportunidade</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizaCampopropostaAprovada</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ConfirmacaoAlteracaoFase</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Processo de aprovação Mini Contrato</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
