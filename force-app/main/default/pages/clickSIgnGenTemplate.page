<apex:page sidebar="false" showHeader="true" standardController="ClickSignTemplate__c" title="Create New Template" extensions="ClickSignTemplateController">
    <apex:includeLightning />
    <apex:slds />
    <style type="text/css">
        #lightning {
            /*            background-color: #f7f9fb;*/
            position: relative;
            height: 100%;
            min-height: 100vh;
        }

        html body.sfdcBody {
            padding: 0;
        }

        .noSidebarCell #lightning {
            height: auto;
            min-height: 0;
        }

        .noSidebarCell #lightning #spinner {
            min-height: 20rem;
        }

        .bodyDiv .outerNoSidebar,
        .noSidebarCell,
        .sidebarCell .fixed {
            padding: 0;
        }

        #auraErrorMessage {
            position: fixed;
            top: 0;
            z-index: 9999;
        }
    </style>

    <div id="lightning">
        <div id="spinner">
            <div role="status" class="slds-spinner slds-spinner_medium">
                <span class="slds-assistive-text"> </span>
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
      var navigate = function (event) {
        var recordId = event.getParam('recordId');
        if (typeof sforce != 'undefined') {
          sforce.one.navigateToSObject(recordId);
        } else {
          window.location.href = '/' + recordId;
        }
      };
      var _navigateToURL = function (event) {
        var url = event.getParam('url');
        if (typeof sforce != 'undefined') {
          sforce.one.navigateToURL(url);
        } else if (window.top) {
          window.top.location.href = url;
        } else {
          window.location.href = url;
        }
      };
      $Lightning.use('c:clickSignGemTemplate', function () {
        window.navigateToClickSignList = function (url) {
          if (typeof sforce != 'undefined') {
            sforce.one.navigateToURL(url);
          } else if (window.top) {
            window.top.location.href = url;
          } else {
            window.location.href = url;
          }
        };
        $Lightning.createComponent('c:clickSignTemplateApp', {
          templateId: '{!$CurrentPage.parameters.id}',
          isCreating: '{!$CurrentPage.parameters.isEdit}' !== 'true',
          isClassic: '{!$User.UIThemeDisplayed}' === 'Theme3'
        }, 'lightning', function (component, status, errorMessage) {
          if (status === 'SUCCESS') {
            document.getElementById('spinner').style.display = 'none';
          } else {
            // TODO: handle error?
          }
          var lightningDiv = document.getElementById('lightning');
          if (lightningDiv) {
            lightningDiv.addEventListener('redirect', function (e) {
              var url = e.detail && e.detail.url;
              if (!url) {
                return;
              }
              e.preventDefault();
              window.navigateToClickSignList(url);
            });
          }
          window.addEventListener('clicksign:navigate', function (e) {
            var url = e.detail && e.detail.url;
            if (!url) {
              return;
            }
            window.navigateToClickSignList(url);
          });
          window.addEventListener('message', function (e) {
            var data = e.data || {};
            if (data.type !== 'clicksign:navigate' || !data.url) {
              return;
            }
            if (typeof sforce != 'undefined') {
              sforce.one.navigateToURL(data.url);
            } else if (window.top) {
              window.top.location.href = data.url;
            } else {
              window.location.href = data.url;
            }
          });
          $A.eventService.addHandler({'event': 'force:navigateToSObject', 'handler': navigate});
          $A.eventService.addHandler({'event': 'force:navigateToURL', 'handler': _navigateToURL});
        });
      });
    </script>
</apex:page>
