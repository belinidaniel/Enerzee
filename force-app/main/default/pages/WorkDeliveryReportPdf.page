<apex:page controller="WorkDeliveryReportPdfController"
    renderAs="pdf"
    showHeader="false"
    sidebar="false"
    standardStylesheets="false"
    applyBodyTag="false"
    cache="false">
    <head>
        <style type="text/css" media="print">
            @page {
                size: A4 portrait;
                margin: 0;
            }

            body {
                margin: 0;
                padding: 0;
            }

            .page {
                width: 100%;
                height: 100%;
                page-break-after: always;
            }

            .page img {
                width: 100%;
                height: 100%;
            }
        </style>
    </head>

    <apex:repeat value="{!pageUrls}" var="url">
        <div class="page">
            <apex:image url="{!url}" />
        </div>
    </apex:repeat>
</apex:page>
